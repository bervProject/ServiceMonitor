@page
@model ServiceMonitor.Pages.InstancesModel
@{
}

<form method="get">
    <select asp-for="SelectedRegion" asp-items="Model.Regions"></select>
    <input type="submit" />
</form>
<p>Selected Region: @Model.SelectedRegion</p>
@if (Model.Instances.Count == 0)
{
    <p>No Data</p>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Status</th>
        </tr>
        @foreach (var instance in Model.Instances)
        {
            <tr>
                <td>@instance.Name</td>
                <td>@instance.CreatedAt</td>
                <td>@instance.Status</td>
            </tr>
        }
    </table>
}